#include <stdarg.h>
#include <stdbool.h>
#include <stdio.h>
#include "libft.h"

int	print(char *str, ...)
{
	va_list	params;

	va_start(params, str);
	if (!ft_strncmp(str, "char", 4))
		ft_putchar_fd(va_arg(params, int), 1);
	else if (!ft_strncmp(str, "int", 3))
		ft_putnbr_fd(va_arg(params, int), 1);
	else if (!ft_strncmp(str, "str", 3))
		ft_putstr_fd(va_arg(params, char*), 1);
	else
		ft_putstr_fd("zob", 1);
	va_end(params);
	return 0;
}

int	main()
{
	print("char", 'a');
	printf("\n");
	print("int", 5);
	printf("\n");
	print("char", 35);
	printf("\n");
	print("int", 'a');
	printf("\n");
	print("it", 'a');
	printf("\n");
	print("str", "bonjour");
	printf("\n");
}
